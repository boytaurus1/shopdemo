@model Register
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Checkout</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Register</li>
    </ol>
</div>
<!-- Single Page Header End -->


<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register Form</h1>
        <form asp-controller="Register" asp-action="Index" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-12 col-xl-12">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MaKh" class="form-label my-3">Username<sup>*</sup></label>
                                <input asp-for="@Model.MaKh" class="form-control">
                                <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MatKhau" class="form-label my-3">Password<sup>*</sup></label>
                                <input asp-for="@Model.MatKhau" type="text" class="form-control">
                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-item">
                        <label asp-for="@Model.HoTen" class="form-label my-3">FullName<sup>*</sup></label>
                        <input asp-for="@Model.HoTen" class="form-control">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                    @*<div class="form-item">
                            <label class="form-label my-3">Gender<sup>*</sup></label>
                            <select class="form-control">
                                <option value="0">Nam</option>
                                <option value="1">Nữ</option>
                                <option value="2">Khác</option>
                            </select>
                        </div>*@
                    @*<div class="form-check my-3">
                        <input asp-for="@Model.GioiTinh" class="form-check-input">
                        <label for="GioiTinh" class="form-check-label">Nam?</label>
                    </div>*@
                    <div class="form-item">
                        <label asp-for="@Model.NgaySinh" class="form-label my-3">Mobile<sup>*</sup></label>
                        <input asp-for="@Model.NgaySinh" class="form-control">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label asp-for="@Model.DiaChi" class="form-label my-3">Address<sup>*</sup></label>
                        <input asp-for="@Model.DiaChi" class="form-control">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                    @*<div class="form-item">
                            <label class="form-label my-3">Birthday<sup>*</sup></label>
                            <input type="date" class="form-control">
                        </div>*@
                    <div class="form-item">
                        <label asp-for="@Model.DienThoai" class="form-label my-3">Mobile<sup>*</sup></label>
                        <input asp-for="@Model.DienThoai" class="form-control">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label asp-for="@Model.Email" class="form-label my-3">Email<sup>*</sup></label>
                        <input asp-for="@Model.Email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">
                            REGISTER
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>