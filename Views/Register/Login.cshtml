@model Login
@*Single Page Header start*@
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Login</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Login</li>
    </ol>
</div>
@*Single Page Header End*@
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="mb-4 mt-4 text-center">
            <h1>Login</h1>
        </div>
        <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">

            <div class="row g-5">
                <div class="col-md-12 col-lg-12 col-xl-12">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Username" class="form-label my-3">Username<sup>*</sup></label>
                                <input asp-for="@Model.Username" class="form-control">
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                                @*@Html.ValidationMessageFor(x => x.Username, "tên chưa đúng", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Password" class="form-label my-3">Password<sup>*</sup></label>
                                <input asp-for="@Model.Password" type="text" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                @*@Html.ValidationMessageFor(x => x.Username, "mật khẩu chưa đúng", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">
                                Đăng Nhập
                            </button>
                            <div>
                                <a asp-controller="Register" asp-action="Index">Tạo tài khoản</a>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>